<%- include('partials/header') %>

<main class="flex-grow-1 container my-5 text-white">
  <div class="container mt-5">
    <h1 class="text-center">My Projects</h1>
    <hr>
    <div class="row">
      <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4 project-card">
          <div class="card h-100 d-flex flex-column shadow-lg bg-dark text-light">
            <% if (project.imageUrl) { %>
              <img src="<%= project.imageUrl %>" class="card-img-top" alt="<%= project.title %>">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= project.title %></h5>
              <!-- <p class="card-text"><%= project.description %></p> -->

              <% if (project.techStack && project.techStack.length) { %>
                <p class="text-white"><strong>Tech Stack:</strong> <%= project.techStack.join(", ") %></p>
              <% } %>

              <!-- Push buttons to the bottom -->
              <div class="mt-auto pt-3">
                <% if (project.githubLink) { %>
                  <a href="<%= project.githubLink %>" class="btn btn-outline-primary btn-sm me-2" target="_blank">GitHub</a>
                <% } %>

                <% if (project.liveLink) { %>
                  <a href="<%= project.liveLink %>" class="btn btn-outline-success btn-sm" target="_blank">Live</a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
